ALUNOS 2 



SELECT AVG(Idade) AS MEDIA_IDADE FROM `Alunos`WHERE PrimeiroNome LIKE '%b%'


SELECT SUM(Idade) AS SOMAIDADE_ALUNOS FROM `Alunos`WHERE PrimeiroNome LIKE '%s%'



SELECT AVG(Idade) AS MEDIA_ALUNAS FROM `Alunos`WHERE Sexo = 'FEM' AND PrimeiroNome LIKE 'i%'



SELECT AVG(Idade) AS MEDIA_ALUNAS FROM `Alunos`WHERE Sexo = 'MASC' AND PrimeiroNome LIKE 'g%'


SELECT SUM(Idade) AS SOMAIDADE_ALUNOS FROM `Alunos`WHERE Sexo = 'FEM' AND PrimeiroNome LIKE '%A%'





SELECT SUM(Idade) AS SOMAIDADE_ALUNOS FROM `Alunos`WHERE Sexo = 'MASC' AND PrimeiroNome LIKE '%F%'
