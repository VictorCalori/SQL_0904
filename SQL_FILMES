SELECT MIN(DURACAO_MINUTOS) FROM `ENTRETERIMENTO` WHERE 1

SELECT MAX(DURACAO_MINUTOS) FROM `ENTRETERIMENTO` WHERE 1

SELECT NOME, TIPO, DURACAO_MINUTOS
FROM ENTRETERIMENTO
WHERE DURACAO_MINUTOS = (SELECT MAX(DURACAO_MINUTOS) FROM ENTRETERIMENTO);

SELECT NOME, TIPO, DURACAO_MINUTOS
FROM ENTRETERIMENTO
WHERE DURACAO_MINUTOS = (SELECT MIN(DURACAO_MINUTOS) FROM ENTRETERIMENTO);


COUNT, AVG
SELECT COUNT(TIPO) FROM ENTRETERIMENTO WHERE TIPO = 'Série';

SELECT COUNT(TIPO) FROM ENTRETERIMENTO WHERE TIPO = 'Filme';

SELECT AVG(DURACAO_MINUTOS) FROM ENTRETERIMENTO WHERE TIPO = 'Série';




