SELECT COUNT(TIPO) FROM `ENTRETERIMENTO` WHERE TIPO = "Série" AND NOME LIKE "%N%"

SELECT COUNT(TIPO) FROM `ENTRETERIMENTO` WHERE TIPO = "Série" AND NOME LIKE "%o%"

SELECT AVG(DURACAO_MINUTOS) FROM `ENTRETERIMENTO` WHERE TIPO = "Série" AND NOME LIKE "W%"

SELECT SUM(`DURACAO_MINUTOS`) AS `Soma da Duração`
FROM `ENTRETERIMENTO`
WHERE `TIPO` = 'FILME' AND (ATOR_PRINCIPAL = 'Brad Pitt ') AND `NOME` LIKE '%e%';

SELECT *
FROM `ENTRETERIMENTO`
WHERE `TIPO` = 'FILME' AND `NOME` LIKE 'S%'
ORDER BY `DURACAO_MINUTOS` DESC;
